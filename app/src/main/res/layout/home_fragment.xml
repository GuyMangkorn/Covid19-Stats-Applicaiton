<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bgcovid">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textStyle="bold"
                android:id="@+id/detailCountry"
                android:layout_margin="5dp"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/titleTextDetail"
                android:layout_gravity="center"
                android:text="Country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/flagDetail"
                android:layout_width="124dp"
                android:layout_height="124dp"
                android:transitionName="countryFlagTransition"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ViewFlipper
                        android:flipInterval="5000"
                        android:scrollbarFadeDuration="1000"
                        android:inAnimation="@anim/flip_animation_in"
                        android:outAnimation="@anim/flip_animation_out"
                        android:id="@+id/flipCaseTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:scrollbars="vertical"
                                android:text="@string/todayCases"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/textSizeForDetail"
                                android:textStyle="bold" />

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:clickable="true"
                                android:elevation="25dp"
                                android:focusable="true"
                                android:theme="@style/Theme.MaterialComponents.CardCreateStyle"
                                app:cardCornerRadius="7dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="10dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/homeTodayCases"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/todayCases"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="@dimen/textSizeForDetail"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </com.google.android.material.card.MaterialCardView>
                        </LinearLayout>

                        <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:textSize="@dimen/textSizeForDetail"
                            android:textStyle="bold"
                            android:layout_margin="5dp"
                            android:textColor="@color/colorBlack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/totalCases"
                            android:scrollbars="vertical"
                            />
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            app:cardCornerRadius="7dp"
                            android:elevation="25dp"
                            android:layout_margin="5dp"
                            android:focusable="true"
                            android:theme="@style/Theme.MaterialComponents.CardCreateStyle">
                            <LinearLayout
                                android:layout_margin="10dp"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/homeTotalCases"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/textSizeForDetail"
                                    android:textColor="@color/colorBlack"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/totalCases" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>
                    </ViewFlipper>

                    <ViewFlipper
                        android:flipInterval="5000"
                        android:scrollbarFadeDuration="1000"
                        android:inAnimation="@anim/flip_animation_in"
                        android:outAnimation="@anim/flip_animation_out"
                        android:id="@+id/flipDeathTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:textSize="@dimen/textSizeForDetail"
                                android:textStyle="bold"
                                android:layout_margin="5dp"
                                android:textColor="@color/colorBlack"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/todayDeaths"
                                android:scrollbars="vertical"
                                />
                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                app:cardCornerRadius="7dp"
                                android:elevation="25dp"
                                android:layout_margin="5dp"
                                android:focusable="true"
                                android:theme="@style/Theme.MaterialComponents.CardCreateStyle">
                                <LinearLayout
                                    android:layout_margin="10dp"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <TextView
                                        android:id="@+id/homeTodayDeath"
                                        android:textStyle="bold"
                                        android:textSize="@dimen/textSizeForDetail"
                                        android:textColor="@color/colorBlack"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/todayDeaths" />
                                </LinearLayout>
                            </com.google.android.material.card.MaterialCardView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:textSize="@dimen/textSizeForDetail"
                                android:textStyle="bold"
                                android:layout_margin="5dp"
                                android:textColor="@color/colorBlack"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/totalDeaths"
                                android:scrollbars="vertical"
                                />
                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                app:cardCornerRadius="7dp"
                                android:elevation="25dp"
                                android:layout_margin="5dp"
                                android:focusable="true"
                                android:theme="@style/Theme.MaterialComponents.CardCreateStyle">
                                <LinearLayout
                                    android:layout_margin="10dp"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <TextView
                                        android:id="@+id/homeTotalDeath"
                                        android:textStyle="bold"
                                        android:textSize="@dimen/textSizeForDetail"
                                        android:textColor="@color/colorBlack"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/totalDeaths" />
                                </LinearLayout>
                            </com.google.android.material.card.MaterialCardView>
                        </LinearLayout>
                    </ViewFlipper>
                    <TextView
                        android:textSize="@dimen/textSizeForDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="@string/totalRecovers"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold" />
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        app:cardCornerRadius="7dp"
                        android:elevation="25dp"
                        android:layout_margin="5dp"
                        android:focusable="true"
                        android:theme="@style/Theme.MaterialComponents.CardCreateStyle">
                        <LinearLayout
                            android:layout_margin="10dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:textStyle="bold"
                                android:textColor="@color/colorRecovery"
                                android:textSize="@dimen/textSizeForDetail"
                                android:id="@+id/homeTotalRecovery"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/totalRecovers" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                    <TextView
                        android:textSize="@dimen/textSizeForDetail"
                        android:textStyle="bold"
                        android:layout_margin="5dp"
                        android:textColor="@color/colorBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/totalActive"/>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        app:cardCornerRadius="7dp"
                        android:elevation="25dp"
                        android:layout_margin="5dp"
                        android:focusable="true"
                        android:theme="@style/Theme.MaterialComponents.CardCreateStyle">
                        <LinearLayout
                            android:layout_margin="10dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:textStyle="bold"
                                android:textSize="@dimen/textSizeForDetail"
                                android:textColor="@color/colorBlack"
                                android:id="@+id/homeTotalActive"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/totalActive" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                    <TextView
                        android:textSize="@dimen/textSizeForDetail"                        android:textStyle="bold"
                        android:layout_margin="5dp"
                        android:textColor="@color/colorBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/totalCritical"/>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        app:cardCornerRadius="7dp"
                        android:elevation="25dp"
                        android:layout_margin="5dp"
                        android:focusable="true"
                        android:theme="@style/Theme.MaterialComponents.CardCreateStyle">
                        <LinearLayout
                            android:layout_margin="10dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:textStyle="bold"
                                android:textSize="@dimen/textSizeForDetail"
                                android:textColor="@color/colorCritical"
                                android:id="@+id/homeTotalCritical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/totalCritical" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>